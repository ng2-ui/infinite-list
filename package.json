{
  "name": "@ngui/infinite-list",
  "version": "0.6.0",
  "description": "Angular2 Infinite List Directive",
  "main": "dist/infinite-list.umd.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ng2-ui/infinite-list.git"
  },
  "author": "Allen Kim <allenhwkim@gmail.com>",
  "bugs": {
    "url": "https://github.com/ng2-ui/infinite-list/issues"
  },
  "homepage": "https://github.com/ng2-ui/infinite-list#readme",
  "scripts": {
    "start": "NODE_ENV=dev webpack-dev-server --quiet --port 9001 --content-base app --config app/webpack.config --open",
    "lint": "tslint 'src/**/*.ts' 'app/**/*.ts'",
    "clean": "rimraf dist",
    "build": "npm-run-all --serial upgrade clean build:ngc build:umd build:app",
    "build:ngc": "ngc -p tsconfig.ngc.json",
    "build:umd": "NODE_ENV=prod webpack",
    "build:app": "NODE_ENV=prod webpack --config app/webpack.config",
    "upgrade": "npm-check-updates --upgradeAll"
  },
  "dependencies": {
    "@ngui/utils": "^0.7.0"
  },
  "devDependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@types/node": "^7.0.12",
    "angular2-template-loader": "^0.6.2",
    "codelyzer": "^3.0.0-beta.4",
    "core-js": "^2.4.1",
    "npm-check-updates": "^2.10.4",
    "npm-run-all": "^4.0.2",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "rxjs": "^5.2.0",
    "strip-loader": "^0.1.2",
    "ts-loader": "^2.0.3",
    "tslint": "^4.5.1",
    "typescript": "^2.2.2",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2",
    "zone.js": "^0.8.5"
  }
}
